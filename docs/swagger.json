{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Travellers APP",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This app is for sharing travel experiences"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Auth operations."
    },
    {
      "name": "Users",
      "description": "Operations with travelers (users)"
    },
    {
      "name": "Stories",
      "description": "Operations with stories"
    },
    {
      "name": "Categories",
      "description": "Operations with categories"
    }
  ],
  "paths": {
    "/auth": null,
    "/users": null,
    "/users/{id}": null,
    "/users/{id}/avatar": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Update user avatar",
        "operationId": "updateUserAvatar",
        "description": "Updates the avatar of the authenticated user.   The avatar must be an image file (JPG, PNG, or GIF) with a maximum size of 500 kB.   Authentication is performed using an access token stored in cookies.\n",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "avatar"
                ],
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "description": "User avatar file (max size 500kB, allowed types: JPG, PNG, GIF)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Avatar updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Avatar updated successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "avatarURL": {
                          "type": "string",
                          "example": "https://res.cloudinary.com/demo/image/upload/v1731057321/avatar.png"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input or missing avatar file",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (missing or invalid token in cookies)"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/categories": null,
    "/stories": null,
    "/stories/{id}": null
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "BadRequestError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message",
                    "errors"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Bad Request"
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "Name should have at least 3 characters"
                          },
                          "path": {
                            "type": "array",
                            "items": {
                              "type": "string",
                              "example": [
                                "name"
                              ]
                            }
                          },
                          "type": {
                            "type": "string",
                            "example": "string.min"
                          },
                          "context": {
                            "type": "object"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal Server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "example": "Internal Server error"
                }
              }
            }
          }
        }
      },
      "404all": {
        "description": "Not found error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "NotFoundError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Such stories not found."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404byId": {
        "description": "Not found error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "NotFoundError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Storie with ID: 68fad270e7f1469dd713faed not found."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "category": {
        "type": "object",
        "required": [
          "_id",
          "name"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Category unique identifier",
            "example": "68fad270e7f1469dd713faef"
          },
          "name": {
            "type": "string",
            "description": "Category name",
            "example": "Adventure"
          }
        }
      },
      "story": {
        "type": "object",
        "required": [
          "_id",
          "title",
          "category",
          "ownerId",
          "date"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Story ID"
          },
          "title": {
            "type": "string",
            "description": "Story title"
          },
          "img": {
            "type": "string",
            "description": "Image URL (optional)"
          },
          "article": {
            "type": "string",
            "description": "Story text/content"
          },
          "category": {
            "type": "object",
            "required": [
              "_id",
              "name"
            ],
            "properties": {
              "_id": {
                "type": "string",
                "description": "Category ID"
              },
              "name": {
                "type": "string",
                "description": "Category name"
              }
            }
          },
          "ownerId": {
            "type": "string",
            "description": "Author (user) ID"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "Publication date"
          },
          "favoriteCount": {
            "type": "integer",
            "description": "Number of times added to favorites"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Document creation date"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Last update date"
          }
        }
      }
    }
  }
}